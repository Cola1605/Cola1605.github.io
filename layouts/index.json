{{- $index := slice -}}
{{- range $page := .Site.RegularPages -}}
  {{- if and (ne $page.Params.draft true) (ne $page.Params.search false) -}}
    {{- $index = $index | append (dict 
      "title" $page.Title 
      "href" $page.Permalink 
      "summary" ($page.Summary | plainify | truncate 200) 
      "content" ($page.Plain | truncate 500)
      "date" ($page.Date.Format "2006-01-02")
    ) -}}
  {{- end -}}
{{- end -}}
{{- $index | jsonify -}}