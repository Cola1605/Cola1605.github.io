# Hugo Incremental Build Configuration
# This file controls the behavior of incremental builds

# Directories to watch for changes
WATCH_DIRS=content/posts,content/about,static,layouts

# File extensions to monitor
WATCH_EXTENSIONS=.md,.html,.css,.js,.json,.toml,.yaml,.yml

# Build cache settings
CACHE_FILE=.build-cache
BUILD_LOG=build.log

# Hugo build options
HUGO_ARGS=--gc --minify --quiet

# Git auto-commit settings
AUTO_COMMIT=true
COMMIT_MESSAGE_PREFIX="Auto-build"

# Performance settings
MAX_PARALLEL_BUILDS=4
DEBOUNCE_DELAY=2

# Deployment settings
AUTO_DEPLOY=false
DEPLOY_BRANCH=main

# Notification settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND=true

# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false